{
  "version": "1.2.1",
  "id": "@shopgate/upselling",
  "components": [
    {
      "id": "PDPDescriptionAfter",
      "type": "portals",
      "path": "frontend/portals/ProductDetailPageSlider",
      "target": "product.description.after"
    },
    {
      "id": "PDPHeaderAfter",
      "type": "portals",
      "path": "frontend/portals/ProductDetailPageSlider",
      "target": "product.header.after"
    },
    {
      "id": "PDPAddToCartSheet",
      "type": "portals",
      "path": "frontend/portals/ProductDetailPageAddToCartSheet",
      "target": "app.globals"
    }
  ],
  "configuration": {
    "productPage": {
      "type": "admin",
      "destination": "frontend",
      "default": {},
      "params": {
        "type": "json",
        "label": "Product page settings (see README)",
        "required": false
      }
    },
    "productPageAddToCart": {
      "type": "admin",
      "destination": "frontend",
      "default": {},
      "params": {
        "type": "json",
        "label": "Product page add to cart settings (see README)",
        "required": false
      }
    }
  }
}
